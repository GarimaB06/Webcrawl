{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["jest", "node"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
